<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kaleb.serialrecorder.MainMenu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:id="@+id/newItemButton"
        android:onClick="newItemClicked"
        android:drawableLeft="@mipmap/add"
        android:width="150dp"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/viewItemsButton"
        android:layout_alignStart="@+id/viewItemsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_items"
        android:id="@+id/viewItemsButton"
        android:onClick="viewItemsClicked"
        android:width="150dp"
        android:drawableLeft="@mipmap/viewlist"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/newItemButton"
        android:layout_alignLeft="@+id/helpButton"
        android:layout_alignStart="@+id/helpButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help"
        android:id="@+id/helpButton"
        android:onClick="helpClicked"
        android:width="150dp"
        android:drawableLeft="@mipmap/help"
        android:layout_above="@+id/aboutButton"
        android:layout_alignLeft="@+id/aboutButton"
        android:layout_alignStart="@+id/aboutButton"
        android:layout_marginBottom="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:id="@+id/aboutButton"
        android:onClick="aboutClicked"
        android:width="150dp"
        android:drawableLeft="@mipmap/person"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

</RelativeLayout>

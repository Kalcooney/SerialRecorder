<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.kaleb.serialrecorder.NewItemActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemNameInput"
            android:text="@string/item_name_input"
            android:maxLength="25"
            android:maxLines="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="itemNameClicked" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemDescriptionInput"
            android:text="@string/item_description_input"
            android:maxLength="250"
            android:maxLines="7"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/itemNameInput"
            android:layout_alignRight="@+id/galleryButton"
            android:layout_alignEnd="@+id/galleryButton"
            android:onClick="itemDescriptionClicked" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/serialNumberInput"
            android:text="@string/serial_number_input"
            android:maxLength="15"
            android:maxLines="1"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/itemDescriptionInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="serialNumberClicked" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/datePurchasedInput"
            android:text="@string/purchase_date_input"
            android:layout_below="@+id/serialNumberInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:focusable="false"
            android:onClick="datePurchasedClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/take_photo_button"
            android:id="@+id/takePhotoButton"
            android:onClick="launchCamera"
            android:layout_alignBaseline="@+id/galleryButton"
            android:layout_alignBottom="@+id/galleryButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_from_gallery_button"
            android:id="@+id/galleryButton"
            android:onClick="galleryClicked"
            android:layout_below="@+id/datePurchasedInput"
            android:layout_alignRight="@+id/datePurchasedInput"
            android:layout_alignEnd="@+id/datePurchasedInput"
            android:layout_marginTop="193dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/itemImageView"
            android:layout_weight="1.0"
            android:nestedScrollingEnabled="true"
            android:layout_above="@+id/takePhotoButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:scaleType="fitXY"/>

    </RelativeLayout>
</ScrollView>
